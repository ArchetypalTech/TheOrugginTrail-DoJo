{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"indentStyle": "tab"
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"all": false
			},
			"style": {
				"noNonNullAssertion": "off",
				"useNumberNamespace": "off",
				"noInferrableTypes": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"suspicious": {
				"noShadowRestrictedNames": "off",
				"noArrayIndexKey": "off"
			}
		}
	}
}
